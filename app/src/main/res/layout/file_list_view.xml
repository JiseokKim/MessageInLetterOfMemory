<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_name"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/file_name_text_size"
        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        tools:text="사랑은 밤 늦게 찾아온다.3GP"
        tools:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_date"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/reservation_date_text_size"
        apps:layout_constraintTop_toBottomOf="@id/file_name"
        apps:layout_constraintStart_toStartOf="parent"
        tools:text="예약날짜:2017-09-21"
        tools:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipient"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/recipient_text_size"
        apps:layout_constraintTop_toBottomOf="@id/file_name"
        apps:layout_constraintStart_toEndOf="@id/reservation_date"
        tools:text="받는사람:세바츠찬"
        tools:textSize="20sp"/>
    <ImageButton
        android:layout_width="@dimen/edit_btn_size"
        android:layout_height="@dimen/edit_btn_size"
        android:id="@+id/file_edit_btn"
        android:src="@drawable/ic_create_black_24dp"
        android:background="@android:color/transparent"
        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>